#include <stdio.h>

int main(){
int metros;
int decimetros;
int centimetros;
int milimetros;

printf("Digite quantos metros percorreu: ");
scanf("%i" &metros);

decimetros = metros * 10;
centimetros = decimetros * 10;
milimetros = centimetros * 10;

Printf("Você conseguiu percorrer %i metros, %i decimetros, %i centimetros, %i milimetros!/n Parabéns!");
}
